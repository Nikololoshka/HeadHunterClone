<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.SearchBar" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:background">@drawable/default_card_background</item>
        <item name="android:drawableStart">@drawable/search</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/basic_white</item>
        <item name="android:textColorHint">@color/basic_gray3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Base.SearchBar.ActionButton" parent="Widget.Material3.Button.IconButton.Filled">
        <item name="iconSize">24dp</item>
        <item name="android:padding">8dp</item>
        <item name="iconTint">@color/basic_white</item>
        <item name="android:background">@drawable/default_card_background</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="backgroundTint">@color/basic_gray2</item>
    </style>
</resources>